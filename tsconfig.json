{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      // 这样就可以对 `this` 上的数据属性进行更严格的推断
      "strict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*":["src/*"]
      }
    },
    "include":[
        "src/**/*.ts"
        ,"src/**/*.d.ts"
        ,"src/**/*.vue"
    ]
  }